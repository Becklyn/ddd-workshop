{
    "name": "@becklyn/ddd-nest",
    "version": "1.0.0",
    "description": "NestJS bridge for the Becklyn DDD framework",
    "keywords": [
        "DDD",
        "NestJS"
    ],
    "author": "Marko Vujnovic <mv@becklyn.com>",
    "license": "MIT",
    "scripts": {
        "eslint": "eslint \"src/**/*.ts\" --fix",
        "eslint-check": "eslint \"src/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "format-check": "prettier --check \"src/**/*.ts\"",
        "tsc": "tsc -p ./tsconfig.build.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "files": [
        "dist/**/*"
    ],
    "main": "dist/index.js",
    "dependencies": {
        "@becklyn/ddd": "^1.0.0",
        "@fraym/streams": "^0.2.1",
        "@nestjs/common": "^8.0.0",
        "@nestjs/cqrs": "^8.0.4"
    },
    "devDependencies": {
        "@becklyn/gherkin-style-tests": "^1.0.0",
        "@becklyn/prettier": "^1.0.2",
        "@types/jest": "27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.5",
        "prettier": "^2.3.2",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.5"
    },
    "prettier": "@becklyn/prettier"
}
